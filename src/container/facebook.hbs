<div>
  <main>
	<div class="text-bg-primary p-3">
		<section>
			<p class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2" style="--bs-focus-ring-x: 10px; --bs-focus-ring-y: 10px; --bs-focus-ring-blur: 4px">
				{{name}}
			</p>
		</section>
		<br>
		<hr>
		
		<section>
			<div>
				{{> title data='Users'}}
				<ul>
					{{#each users}}
					<li>
						<div class="card" style="width: 18rem;">
							<img src="..." class="card-img-top" alt="...">
							<div class="card-body">
								<p class="card-text">
									ID: {{id}} <br>
									Name: {{name}} ({{gender}}), {{age}} years old <br>
									Friends:
								</p>
								<div>
									<ul>
										{{#each friends}}
										<li>
											<div class="card" style="width: 18rem;">
												<img src="..." class="card-img-top" alt="...">
												<div class="card-body">
													<p class="card-text">
														ID: {{id}} <br>
														Name: {{name}} ({{gender}}), {{age}} years old <br>
														<br>
														Mutual friends:
													</p>
													<div>
														<ul>
															{{#each mutual_friends}}
