{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    
    {{#with main}}
        <main>            
            <section class="mb-5">           
                {{#with summary}}
                    {{> title data='Summary' big=true}}
                    {{text}}
                {{/with}}        
            </section>

            <section class="mb-5">
                {{#with experience}}
                    {{> title data='Other experience' big=false}}                                                             
                    {{text}}
                {{/with}}
            </section>            
        </main>
    {{/with}}
</div>

