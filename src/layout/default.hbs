        <div class="mb-2">
          <h1>{{name.firstname}} {{name.lastname}}</h1>
        </div>

        <div class="mb-2">
          <b>{{position}}</b>
        </div>
        
        <div class="mb-2">
          <em>{{salary}}</em>
