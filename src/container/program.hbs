<div>

	<div class="row col-12 m-3 gy-3">
		
		<a href="/" class="btn btn-outline-primary text-center col-3 g-5 p-1">Return to home page</a>
			<div class="col-5 g-5"></div>
		<a href="/facebook" class="btn btn-outline-primary text-center col-3 g-5 p-1">Next page</a>		

	</div>

	<hr class="row col-12 my-1">

	<div class="row col-12 my-3 nav-tabs text-center">
		<div class="nav">
			{{#each tabs}}	
				<div class="nav-item col-2 g-3">
					<a href="{{href}}" class="btn nav-link {{#if isActive}} active {{/if}}">{{text}}</a>
				</div>
			{{/each}}
		</div>
	</div>	

	{{#with program}}
		<main>
			<div>
				<section class="mb-5">
					{{#with excursion}}
						<center>
							<b>{{> title data='Excursion'}}</b>																			
								<h1><em><b>{{name}}</b></em></h1>
								<div>
									{{#with location}}
									<div>{{city}}, {{country}}</div>
									{{/with}}
								</div>
								<div>{{date}}</div>						
						</center>

				
						<hr class="my-5">

						<section class="mb-5">
							<center><h2>{{> title data= 'Program'}}</h2></center>
							<ul>
								{{#each program}}
								
									<li>
										<div><b>{{name}}</b></div>
										<div>{{type}} (Duration: {{duration}})</div>
										<div class="mx-5">
											{{#with details}}
											
												{{#if museum includeZero=true}}
													<details>
														<summary><b><em>Some details</em></b></summary>
															<div>
																{{#with museum}}
																	Museum: <em>{{name}}</em>
																	<div>
																		{{#with location}}
																			{{address}}, {{city}}, {{country}}
																		{{/with}}
																	</div>
																	<br>
																	<div>
																		<ul>
																			{{#each exhibits}}
																			<li>
																				<div>
																					{{name}}
																				</div>
																				<div>
																					{{#if artist includeZero=true}}
																						{{artist}}
																					{{/if}}
																				</div>
																				<div>
																					{{#if audio_guide}}
																					Audio guide	
																					{{/if}}
																				</div>
																			</li>
																			<br>
																			{{/each}}
																		</ul>
																	</div>
																{{/with}}	
															</div>
													</details>	
												{{/if}}
												

												

												

												<div>
													<b>Guide:</b>
													{{#with guide}}
														{{name}} | {{language}} | {{rating}}
													{{/with}}
												</div>
												<br>

												<div>
													{{#if performers}}
														{{> title data='Performers'}}
														<ul>
															{{#each performers}}
															<li>
																{{name}} | {{type}}
															</li>
															{{/each}}
														</ul>
													{{/if}}
												</div>
											{{/with}}
										</div>
									<br>
									<hr>
									</li>
								{{/each}}
							</ul>
						</section>	
					{{/with}}			
				</section>
			</div>		
		</main>
	{{/with}}
</div>