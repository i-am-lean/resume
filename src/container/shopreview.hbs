<main>

	<div class="row col-12 m-3 gy-3">
		
		<a href="/shopcatalog" class="btn btn-outline-primary text-center col-3 g-5 p-1">Return</a>
			<div class="col-5 g-5"></div>
		<a href="/shopcart" class="btn btn-outline-primary text-center col-3 g-5 p-1">Next</a>		

	</div>

	<div class="row col-12 card">
		{{#with navigation}}
			<div class="nav text-center col-12 g-5 m-1 pe-2">
				{{#each links}}
					<div class="nav-item col-4 g-3">
						<a href="{{href}}" class="nav-link active">{{text}}</a>
					</div>
				{{/each}}
			</div>
		{{/with}}
	</div>

	<div class="row col-12">
		
			
			<div class="row col-12">
				{{#with formBlock}}
					<h1 class="col-12 my-4">{{header}}</h1>

					<section class="row col-8 my-2">
						{{#with rating}}
							<p>{{title}}: {{value}}</p>
						{{/with}}
					</section>

					<section class="row col-8 my-2">
						{{#with actionBlock}}
							<div class="row col-12 nav-tabs">
								<div class="nav">
									{{#each tabs}}	
										<div class="nav-item col-4 g-3">
											<button class="btn nav-link {{#if isActive}} active {{/if}}">{{text}}</button>
										</div>
									{{/each}}
								</div>
							</div>	

							<div>
								<hr class="row col-12 my-5">
							</div>

							<div class="row col-12 p-3 card">
								{{#with report}}
									<p class="col-12">{{title}}</p>
									{{#with button}}
										<div class="col-12">
											<a href="{{link}}" class="btn btn-secondary btn-sm col-4">{{text}}</a>
										</div>	
									{{/with}}
								{{/with}}
							</div>

						{{/with}}
					</section>


					<div>
						<hr class="row col-12 my-5">
					</div>

					<section class="row col-8">
						{{#with feedbackBlock}}
							<h3 class="col-12 my-4">{{title}}</h3>

							<div class="col-12">
								{{#each buttons}}
									<a href="{{link}}" class="btn
									{{#if isSuccess}} btn-success {{/if}}
									{{#if isWarning}} btn-warning {{/if}} 
									{{#if isDanger}} btn-danger {{/if}} btn-sm m-1">{{text}}</a>
								
								{{/each}}
							</div>
						{{/with}}
					</section>

					<section class="row col-4">
			
						<div class="row col-12">
							{{#with goodsInfo}}
								<div class="card col-12 p-1 m-1">
									<img class="card-img-top" src="{{photo}}">
									<h4>{{name}}</h4>
								</div>

								<div class="card col-12 p-1 m-1">
									<p class="col-12 p-2">{{price}}</p>
									<p class="col-12 p-2">{{#if inMarket}} В наявності {{/if}}</p>
									{{#each buttons}}
										<a href="{{link}}" class="btn 
										{{#if isPrimary}} btn-primary {{/if}}
										{{#if isSecondary}} btn-secondary{{/if}} btn-sm m-1">{{text}}</a>
									{{/each}}
								</div>

								<div class="card col-12 p-2 m-1">
									{{#with seller}}
										<p>{{title}}: <b>{{value}}</b></p>
									{{/with}}
								</div>

							{{/with}}
						</div>

					</section>

				{{/with}}
			</div>

		

		
	</div>

	<div>
		<hr class="row col-12 my-4">
	</div>

	<section class="card row col-12 p-2">
		{{#each reviewList}}

			{{> reviewItem}}

		{{/each}}
	</section>

	<section class="card row col-12 my-3">
		{{#with service}}
			<div class="text-bg-success text-center pt-2 pb-2">
				<h2>{{title}}</h2>
				<p>{{description}}</p>

				{{#each buttons}}
					<a href="{{link}}" class="btn btn-primary ">{{text}}</a>
				{{/each}}
			</div>
		{{/with}}
	</section>

	<section class="row col-12 my-4">
		{{#each footer}}
			{{> footer_shop}}
		{{/each}}
	</section>
</main>