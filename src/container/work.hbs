<div>  
    <div class="row col-12 m-3 gy-3">
		
		<a href="/" class="btn btn-outline-primary text-center col-3 g-5 p-1">Return to home page</a>
			<div class="col-5 g-5"></div>
		<a href="/task22" class="btn btn-outline-primary text-center col-3 g-5 p-1">Next page</a>		

	</div>  
    {{#with main}}
        <main>            
            <section>           
                {{> title data='Work history' big=true}}
                <div>
                    <ul>
                        {{#each works}}
                        <li>

                            <div>
                                {{position}}
                            </div>

                            <br>

                            <div>
                                {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}} 
                                        {{else}} 
                                        (по теперішній час) 
                                    {{/if}}
                            </div>

                            <br>

                            <div>
                                {{#with company}}
                                <b>{{name}}</b>
                               {{> link href=url blank=true includeZero=true noLine=true}}
                                {{/with}}
                            </div>

                            <br>
                            <br>

                            <div>
                                <strong>Projects ({{projectAmount}})</strong>
                            </div>

                            <br>
                            <ul>
                                {{#each projects}}    

                                <br> 

                                <li>
                                   
                                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                    
                                        <div>
                                            <p>{{about}}</p>
                                        </div>

                                        <br>

                                        <div>
                                            <ul>
                                                <div>
                                                    <em>Progect stacks ({{stackAmount}})</em>
                                                </div>

                                                <br>

                                                {{#each stacks}}
                                                
                                                <li>{{name}}</li>

                                                {{/each}}
                                            </ul>                        
                                        </div>

                                        <br>

                                        <div>
                                            <ul>
                                                <div>
                                                    <em>Progect awards</em>
                                                </div>
                                        
                                                <br>
                                        
                                                {{#each awards}}
                                        
                                                    <li>{{name}}</li>
                                        
                                                {{/each}}
                                            </ul>
                                        </div>
                                    
                                    <br>

                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        <br>
                        {{/each}}
                    </ul>
                </div>
            </section>
                      
        </main>
    {{/with}}
</div>

