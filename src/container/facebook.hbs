																	<div class="card" style="width: 18rem;">
																		<img src="..." class="card-img-top" alt="...">
																		<div class="card-body">
																			<p class="card-text">
																				ID: {{id}} <br>
																				Name: {{name}} ({{gender}}), {{age}} years old
																			</p>
																		</div>
																	</div>
																</li>
															{{/each}}
														</ul>
													</div>
													<br>
													<div>
														<ul>
															{{#each groups}}
																<li>
																	<div class="row">
																		<div class="col-sm-6 mb-3 mb-sm-0">
																			<div class="card">
																			<div class="card-body">
																				<h5 class="card-title">{{name}} (ID:{{id}})</h5>
																				<p class="card-text"><q>{{description}}</q></p>
																				<a href="#" class="btn btn-primary">Go</a>
																			</div>
																			</div>
																		</div>
																	</div>
																</li>
															{{/each}}
														</ul>
													</div>
													

												</div>
											</div>
											<br>	
										</li>
										{{/each}}
									</ul>
								</div>
								<div>
									<ul>
										{{#each groups}} 
											<li>
												<div class="row">
													<div class="col-sm-6 mb-3 mb-sm-0">
														<div class="card">
														<div class="card-body">
															<h5 class="card-title">{{name}} (ID:{{id}})</h5>
															<p class="card-text"><q>{{description}}</q></p>
															<a href="#" class="btn btn-primary">Go</a>
														</div>
														</div>
													</div>
												</div>
											</li>
										{{/each}}
									</ul>
								</div>
							</div>
						</div>
					</li>
					{{/each}}
				</ul>
			</div>
		</section>

		<hr>

		
	</div>
  </main>
